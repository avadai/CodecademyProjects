#include <iostream>

int main() {
  int year;

  std::cout << "Please enter the year: ";
  std::cin >> year;
  
  if (year > 999 && year < 10000) {
    if (year % 4 == 0) {
      std::cout << "The year you've entered is a leap year!\n";
    } else {
      std::cout << "The year you've entered is NOT a leap year.\n";
    }
  } else {
    std::cout << "Please enter a VALID year.\n";
  }
}
