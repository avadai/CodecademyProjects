#include <iostream>

int main() {
  double pesos;
  double reais;
  double soles;
  double dollars;

  std::cout << "Enter number of Colombian Pesos: ";
  std::cin >> pesos;
  std::cout << "Enter number of Reais: ";
  std::cin >> reais;
  std::cout << "Enter number of Soles: ";
  std::cin >> soles;

  dollars = 0.00032 * pesos + 0.27 * reais + 0.3 * soles;

  std::cout << "US Dollars = $" << dollars << "\n";
}
